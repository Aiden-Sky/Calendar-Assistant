<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="16dp">

    <!-- 顶部标题 -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="专注时钟"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 时钟圆环背景 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/clock_container"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="150dp"
        app:cardCornerRadius="140dp"
        app:cardElevation="0dp"
        app:strokeWidth="2dp"
        app:strokeColor="#E0E0E0"

        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <!-- 时间显示 -->
            <TextView
                android:id="@+id/timer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="25:00"
                android:textColor="#4B76B8"
                android:textSize="52sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"/>

            <!-- 调整时间按钮 -->
            <ImageButton
                android:id="@+id/increase_time"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_above="@id/timer_text"
                android:layout_centerHorizontal="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/arrow_up_float"
                app:tint="#757575" />

            <ImageButton
                android:id="@+id/decrease_time"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@id/timer_text"
                android:layout_centerHorizontal="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/arrow_down_float"
                app:tint="#757575" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 控制按钮容器 -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clock_container">

        <!-- 开始/暂停按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_pause"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:text="开始"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="25dp"
            android:backgroundTint="#4B76B8"
            app:elevation="0dp"/>

        <!-- 结束按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_stop"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="结束"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FF5252"
            app:cornerRadius="25dp"
            app:strokeColor="#FF5252"
            app:strokeWidth="2dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>